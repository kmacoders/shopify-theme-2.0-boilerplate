{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./dist",
    // "rootDir": "./src",
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "types": ["google.maps"],

    /* Config alias for ts */
    "baseUrl": ".",
    "paths": {
      "Shopify/*": [ "./shopify/*" ], // Shopify structure
      "Components/*": [ "./src/components/*" ],
      "Helpers/*": [ "./src/helpers/*" ],
      "Styles/*": [ "./src/styles/*" ],
      "Types/*": [ "./src/types/*" ],
      "Vue/*": [ "src/vue/*" ],
    },
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./shopify/**/*.ts",
    "./shopify/**/*.vue",
    "./jest.setup.ts"
  ],
}
